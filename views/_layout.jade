extends _base

block body
  nav.navbar.navbar-default.navbar-static-top
    .container-fluid
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/') Discohands

      .collapse.navbar-collapse
        ul.nav.navbar-nav
          li(class=(page_active === 'topics' ? 'active' : ''))
            a(href='/') Topics
          li(class=(page_active === 'discussed' ? 'active' : ''))
            a(href='/discussed') Discussed

        p.navbar-text.navbar-right(title=user.email)
          = user.display_name
        a.btn.btn-default.navbar-btn.navbar-right(href='/auth/logout')
          i.fa.fa-sign-out
          = ' Sign out'

  .container
    block content
