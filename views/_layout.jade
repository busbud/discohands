extends _base

block body
  nav.navbar.navbar-default.navbar-static-top
    .container
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/') Discohands

      .collapse.navbar-collapse
        ul.nav.navbar-nav
          li(class=(page_active === 'topics' ? 'active' : ''))
            a(href='/') Topics
          li(class=(page_active === 'discussed' ? 'active' : ''))
            a(href='/discussed') Discussed

        ul.nav.navbar-nav.navbar-right
          li(class=(page_active === 'mine' ? 'active' : ''))
            a(href='/mine', title=user.email)= (user.display_name || user.email || 'My Topics')
          li
            a(href='/auth/logout', title='Sign out')
              i.fa.fa-sign-out

  .container
    block content
